{
  "name": "@brutalist/mcp",
  "version": "0.1.3",
  "description": "🏢 Brutalist AI feedback engine. All AIs are sycophants. This one demolishes your work before users do. Concrete-hard criticism from multiple models.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brutalist-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/**/*.d.ts.map",
    "!dist/**/*.test.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc && chmod +x dist/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "debug": "DEBUG=true node --trace-warnings dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "brutalist",
    "ai",
    "criticism",
    "mcp",
    "llm",
    "multi-model",
    "openrouter",
    "claude",
    "modelcontextprotocol",
    "code-review",
    "architecture",
    "security",
    "research"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejmockler/brutalist-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ejmockler/brutalist-mcp/issues"
  },
  "homepage": "https://github.com/ejmockler/brutalist-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "openai": "^4.67.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.28",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "typescript": "^5.8.2"
  }
}
